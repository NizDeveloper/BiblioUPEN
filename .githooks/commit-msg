#!/bin/bash
commit_msg=$(cat "$1")

pattern="^(SBU|BUG|DOCS|HOTFIX)-[0-9]+: .+"

if ! echo "$commit_msg" | grep -qE "$pattern"; then
  echo "ERROR: El mensaje del commit no cumple el formato requerido"
  echo ""
  echo "Formato obligatorio:"
  echo "  SBU-01: Descripci칩n del cambio"
  echo "  BUG-01: Correcci칩n de error"
  echo "  HOTFIX-01: Arreglo/Cambio r치pido"
  echo "  DOCS-01: Cambios en documentaci칩n"
  echo ""
  echo "Tu commit: $commit_msg"
  exit 1
fi

exit 0
